<!doctype html>

<body>
    <canvas id="gameCanvas" width="800" height="600">
    </canvas>
    <script>
        var canvas, canvasContext;

        window.onload = function() {
            canvas = document.getElementById('gameCanvas');
            canvasContext = canvas.getContext('2d');

            document.addEventListener("keydown", keyPressed);
            document.addEventListener("keyup", keyReleased);

            setInterval(mainloop, 1000 / 60);
        }
        //player variables
        var playerYpos = 200;
        const playerXpos = 50;
        const PLAYER_SIZE = 20;
        var playerYup = 5;
        var upKeypress = false;
        const UP_KEY = 38;

        var enemies = [];
        var totalEnemies = 1;
        var startingPos = true;

        var cave = new Image();
        cave.src = 'images/cave.png';



        function mainloop() {
            colorRect(0, 0, canvas.width, canvas.height, 'black'); // bg

            colorRect(playerXpos, playerYpos, PLAYER_SIZE, PLAYER_SIZE, 'red'); // player

            playerMove();
            gravity();
            enemyMove();
            drawEnemy();
            makeEnemy();
            drawImg();

            if (startingPos) {
                for (i = 0; i < totalEnemies; i++) {
                    makeEnemy();
                }
                startingPos = false;
            }
        }

        //player movement
        function playerMove() {
            if (upKeypress)
                playerYpos -= playerYup;

        }


        //enemy movement
        function makeEnemy() {
            var enemyYpos = 0;
            var enemyXpos = 400;
            const ENEMY_SIZE = 20;
            var enemyXspeed = -5;

            var enemy = {
                enemyYpos: enemyYpos,
                ENEMY_SIZE: ENEMY_SIZE,
                enemyXpos: enemyXpos,
                enemyXspeed: enemyXspeed,
            }

            enemies.push(enemy);
        }

        function drawEnemy() {
            enemies.forEach(function(e, i, array) {
                drawImg(e.cave, e.enemyXpos, e.enemyYpos, e.ENEMY_SIZE, e.ENEMY_SIZE, 'brown'); // enemy
            });
        }

        function enemyMove() {
            enemies.forEach(function(e) {

                e.enemyXpos += e.enemyXspeed;

                if (e.enemyXpos < 0) {
                    e.enemyXpos = 600;
                    e.enemyYpos = Math.floor(Math.random() * (550 - 50) + 50);
                }
            });

        }

        //playergravity variables
        var direction = 1;
        var velocity = 2;
        var fallingSpeed = 2;

        //playergravity
        function gravity() {
            playerYpos = playerYpos + (direction * velocity);
        }

        //player key movements
        function keyPressed(evt) {
            if (evt.keyCode == UP_KEY) {
                upKeypress = true;
            }

        }

        function keyReleased(evt) {
            if (evt.keyCode == UP_KEY) {
                upKeypress = false;
            }

        }


        function colorRect(x, y, w, h, c) {
            canvasContext.fillStyle = c;
            canvasContext.fillRect(x, y, w, h);
        }

        function drawImg(src, x, y, w, h) {
            canvasContext.drawImage(src, x, y, w, h);
        }

    </script>
</body>
